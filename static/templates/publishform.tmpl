<section>
  <article id="article">
<div class="center huge">
     FOXDEN: Publish dataset
</div>


<form action="{{.Base}}/publish" method="post" name="did_publish" id="did_publish" class="form">
    <div class="form-item">
        <label>Dataset</label>
        <input class="input" type="text" value="{{.Did}}" id="did" name="did">
    </div>
    <div class="form-item">
        <label>Schema</label>
        <input class="input" type="text" value="{{.Schema}}" id="schema" name="schema">
    </div>
    <div class="form-item">
        <label>Publication Service</label>
        <select class="input" id="provider" name="provider">
            <option value="Zenodo">Zenodo</option>
            <option value="MaterialsCommons">MaterialsCommons</option>
            <option value="DataCite">DataCite</option>
        </select>
    </div>
    <div class="form-item">
        <label>Dataset description</label>
        <textarea class="input" rows="6" id="description" name="description"></textarea>
    </div>
    <div class="form-item">
        <div class="grid">
          <div class="column-1">
            <input type="checkbox" checked="checked" id="draft" name="draf">
          </div>
          <div class="column-11">
            <label>Create draft DOI</label>
          </div>
        </div>
    </div>
    <div class="form-item">
        <button class="button button-small button-dark">Publish</button>
        <button class="button button-small">Cancel</button>
    </div>
</form>

  </article>
</section>
